--
-- Instruction Memory Initialization File
--
-- Instrucion Format:
--
-- R-Type: <6-bit Opcode>,<5-bit rs>,<5-bit rt>,<5-bit rd>,<5-bit shamt>,<6-bit funct>
--    bits   (31-26)       (25-21)     (20-16)    (15-11)     (10-6)       (5-0)
--
-- I-Type: <6-bit Opcode>,<5-bit rs>,<5-bit rt>,<16-bit Address> 
--   bits     (31-26)      (25-21)   (20-16)     (15-0)


--File format:
-- Hex Address 3 hex nibbles (12 bits) : bit31 ...... bit0;

WIDTH=32;
DEPTH=1024;

ADDRESS_RADIX=HEX;
DATA_RADIX=BIN;

CONTENT BEGIN
--Hex Address :   bit31..........................bit0;
--   |             |                              |
    000       :    10001100000000000000000000000000;
--                 |____||___||___||______________|
--                   |     |    |          |
--                   lw, rs=0, rt=0,   offset=0
--  000         load 0 to r0
------------------------------------------------------------------------------
--
    001       :    10001100000000100000000000000000;
--                 |____||___||___||______________|
--                   |     |    |          |
--                   lw, rs=0, rt=2,   offset=0
--  001         load 0 to r2
------------------------------------------------------------------------------

    002       :    10001100000000010000000000000100;
--                 |____||___||___||______________|
--                   |     |    |          |
--                   lw, rs=0, rt=1,   offset=4
--  002         load 16 to r1
------------------------------------------------------------------------------
    003       :    10001100000000110000000000001000;
--                 |____||___||___||______________|
--                   |     |    |          |
--                   lw, rs=0, rt=3,   offset=8
--  003         load 4 to r3

-- index:
------------------------------------------------------------------------------
--Hex Address :   bit31...........bit15..........bit0;
--   |             |               |              |
    004       :    00000000001000000001000000110000;
--                 |____||___||___||___||___||____|
--                   |     |    |    |    |    |
--                 R-type,rs=1,rt=0,rd=2,---,f=index
--	004		index_add r1,r0,r2	--  [Rd] =[Rd] + M [Rs + Rt]

------------------------------------------------------------------------------
--Hex Address :   bit31...........bit15..........bit0;
--   |             |               |              |
    005       :    00000000001000000001000000110000;
--                 |____||___||___||___||___||____|
--                   |     |    |    |    |    |
--                 R-type,rs=1,rt=0,rd=2,---,f=index
--	005		index_add r1,r0,r2	--  [Rd] =[Rd] + M [Rs + Rt]
------------------------------------------------------------------------------
--Hex Address :   bit31...........bit15..........bit0;
--   |             |               |              |
    006       :    00000000011000000001000000110000;
--                 |____||___||___||___||___||____|
--                   |     |    |    |    |    |
--                 R-type,rs=3,rt=0,rd=2,---,f=index
--	006		index_add r3,r0,r2	--  [Rd] =[Rd] + M [Rs + Rt]

END;
